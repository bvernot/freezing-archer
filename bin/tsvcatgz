#!/bin/bash

USAGE="Concatenate TSV files, preserving the header of the first file.
If the header differs between files, exit with a warning.
Usage: $0 file1 file2 file3 ... fileN"

if [ "$#" == "0" ]; then
    echo "$USAGE"
    exit 1
fi


while [ ! -s $1 ] ; do
    >&2 echo "EMPTY $1"
    shift
    continue
done

header=$(zcat $1 | head -n1)
f1=$1

# echo $header
>&2 echo "processing $1"
zcat $1

shift

for item in "$@" ; do

    if [ ! -s $item ] ; then
        >&2 echo "EMPTY $item"
        continue
    fi

    >&2 echo "processing $(ls -alFrth $item)"
    
    header_tmp=$(zcat $item | head -n1)

    # echo $header_tmp
    if [[ $header != $header_tmp ]] ; then
        >&2 echo 
        >&2 echo "ERROR: INCOMPATIBLE HEADERS"
        >&2 echo "First File: $header"
        >&2 echo "This  File: $header_tmp"
        >&2 echo 
        >&2 echo $f1
        >&2 echo $item
        >&2 echo 
        exit 2
    fi

    zcat $item | sed 1d
    
done


